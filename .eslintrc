{
  "extends": "ui-core/client-react",
  "plugins": ["react"],
  "settings": {
    'import/resolver': ['webpack']
  },
  "rules": {
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1,
        "MemberExpression": 1,
        "ObjectExpression": 1,
        "CallExpression": {
          "arguments": 1
        }
      }
    ],
    "no-param-reassign": ["error", { "props": false }],
    "import/no-extraneous-dependencies": 1,
    "import/no-named-as-default": 0,
    "max-len": 0
  },
  "globals": {
      "ssense": true,
      "UI_PLANNING_HOST": true
  }
}
